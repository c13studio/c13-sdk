{
  "name": "@c13/morph",
  "version": "0.0.1",
  "description": "Professional TypeScript SDK for building applications on Morph blockchain with seamless wallet integration and payment functionality",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "test-app",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
    "release:patch": "pnpm version patch && pnpm publish",
    "release:minor": "pnpm version minor && pnpm publish",
    "release:major": "pnpm version major && pnpm publish",
    "test-app:install": "cd test-app && pnpm install",
    "test-app:dev": "cd test-app && pnpm dev",
    "test-app:build": "cd test-app && pnpm build",
    "studio:install": "cd c13-studio && pnpm install",
    "studio:dev": "cd c13-studio && pnpm dev",
    "studio:build": "cd c13-studio && pnpm build"
  },
  "keywords": [
    "morph",
    "blockchain",
    "ethereum",
    "web3",
    "sdk",
    "typescript",
    "react",
    "wagmi",
    "viem",
    "defi",
    "payments",
    "wallet"
  ],
  "author": "C13 Development Team",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/c13studio/c13-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/c13studio/c13-sdk/issues"
  },
  "homepage": "https://github.com/c13studio/c13-sdk#readme",
  "dependencies": {
    "viem": "^2.21.19",
    "wagmi": "^2.12.17",
    "@tanstack/react-query": "^5.59.16"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.3.0",
    "vitest": "^2.1.2",
    "eslint": "^9.12.0",
    "@types/node": "^22.7.5",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.6",
    "prettier": "^3.3.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "typedoc": "^0.26.8",
    "@vitest/coverage-v8": "^2.1.2"
  },
  "peerDependencies": {
    "react": ">=18.3.1 <19.0.0",
    "react-dom": ">=18.3.1 <19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}